<%= link_to '&larr; Back to Projects'.html_safe, projects_path %>

<h1>Edit Project</h1>

<%= error_messages_for :project %>

<%= form_for(@project, :as => :project, :url => project_path, :html => {:method => :put}) do |f| %>
  <%= render 'form', :f => f %>
<% end %>

<div style="margin-left: 30px;">
  <%= link_to 'Remove Project -', project_path(@project), :confirm => 'Are you sure?', :method => :delete, :class => "button" %>
</div>
