<h1>Editing project</h1>

<%= error_messages_for :project %>

<%= form_for(@project, :as => :project, :url => project_path, :html => {:method => :put}) do |f| %>
  <%= render :partial => 'form', :locals => {:f => f} %>
<% end %>

<%= link_to 'Remove', project_path(@project), :confirm => 'Are you sure?', :method => :delete, :class => "button" %>
<%= link_to 'Back', projects_path %>
